{
  "name": "gateway",
  "version": "0.1.0",
  "description": "Gateway for Backend microservices",
  "main": "index.js",
  "scripts": {
    "postinstall": "echo 'Cleaning up...'",
    "start": "cross-env NODE_ENV=prod node ./index.js",
    "prod": "npm run webpack:prod",
    "dev": "npm run webpack:dev",
    "mongod": "$HOME/Applications/mongodb/bin/mongod --dbpath $HOME/Applications/mongodb/data/db",
    "webpack:dev": "cross-env NODE_ENV=dev webpack --watch --mode=development  --log-level=debug",
    "webpack:prod": "cross-env NODE_ENV=prod webpack --mode=production",
    "e2e": "protractor ./tools/config/test/protractor.conf.js",
    "test": "NODE_ENV=test nyc mocha-webpack --timeout 100000 --webpack-config ./tools/config/server.webpack.js  \"src/**/*.spec.ts\" --webpack-env.test",
    "test:ci": "echo \"Info: no test specified\"",
    "coveralls": "NODE_ENV=test nyc report && cat ./coverage/lcov.info | coveralls",
    "doc:rest": "apidoc -i src/app/ -f '.*\\.docs.ts$' -o docs/rest",
    "reinstall": "rm -rf ./node_modules && npm install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "dotenv": "^6.1.0",
    "events": "^3.0.0",
    "express": "^4.16.4",
    "helmet": "^3.15.0",
    "hpp": "^0.2.2",
    "morgan": "^1.9.1",
    "node-fetch": "^2.3.0",
    "redis": "^2.8.0"
  },
  "devDependencies": {
    "@types/compression": "0.0.36",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.42",
    "@types/hpp": "^0.2.1",
    "@types/jasmine": "^3.3.1",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.12",
    "@types/node-fetch": "^2.1.4",
    "@types/redis": "^2.8.8",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^1.0.0",
    "codelyzer": "^4.5.0",
    "copy-webpack-plugin": "^4.6.0",
    "coveralls": "^3.0.2",
    "istanbul-instrumenter-loader": "^3.0.1",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "mocha-webpack": "^1.1.0",
    "nodemon-webpack-plugin": "^4.0.6",
    "nyc": "^13.1.0",
    "sinon": "^7.1.1",
    "sinon-mongoose": "^2.2.1",
    "supertest": "^3.3.0",
    "ts-loader": "^5.3.1",
    "tslint": "^5.11.0",
    "typescript": "~3.1.6",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.27.0",
    "webpack-command": "^0.4.2",
    "webpack-merge": "^4.1.4"
  }
}
